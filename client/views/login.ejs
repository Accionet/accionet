<!DOCTYPE html>
<html lang="en">

<head>

    <title>login - Accionet</title>


    <%= include partials/head.ejs %>
    <link href="/stylesheets/login.css" rel="stylesheet">



</head>

<body>
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
<% } %>

    <div class="container">
        <div class="row ">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Iniciar sesi&oacute;n</h3>
                    </div>
                    <div class="panel-body">
                        <form action="/login" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Usuario" name="username" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Contrase&ntilde;a" name="password" type="password" value="">
                                </div>

                                <input type="submit" value="Ingresar" class="btn btn-lg btn-success btn-block"></input>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%= include partials/scripts.ejs %>
</body>

</html>
