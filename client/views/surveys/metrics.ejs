<html ng-app="accionet-web-app">

<head>
    <title>Lugares - Accionet</title>
    <% include ../partials/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/table.css" media="screen" title="no title">
</head>

<body ng-controller="surveyController">
    <% include ../partials/message_log.ejs %>
        <%= include ../partials/navbar.ejs %>

            <div id="page-wrapper" ng-init="initializeSurveys(null, ' <%= JSON.stringify(survey) %>',' <%= null %>') ">
                <div class="header">
                    <h1>{{selectedSurvey.title}}</h1>
                </div>

                <div>
                    <h3> {{selectedSurvey.description}} </h3>
                    <h3> creada el: {{selectedSurvey.created_at}} </h3>
                </div>

                <div>
                    <h2> Preguntas </h2>

                    <div ng-repeat="question in selectedSurvey.questions">
                        <h4>  {{question.number}}) {{question.title}} </h4>
                        <!--Multiple_choice  -->
                        <div ng-if="!'multiple_choice'.localeCompare(question.type)">
                            <div ng-repeat="option in question.options">
                                <h6>{{option.enumeration}}) {{option.statement}} </h6>
                            </div>
                            <h3> Respuestas: </h3>
                            <table class="table-fill">

                                <thead>
                                    <tr>
                                        <th>Opci√≥n</th>
                                        <th> Cantidad </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="option in question.options">
                                        <td>
                                            {{option.statement}}
                                        </td>
                                        <td>
                                            {{question.metrics[option.enumeration].count}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>



                        </div>

                    </div>

                    <br>


                </div>
                <% include ../partials/scripts.ejs %>
                    <% include partials/surveys_scripts.ejs %>

</body>

</html>
