                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <!-- Nav tabs -->
                        <ul class="nav nav-pills">
                            <li> <a href="#summary-pills" data-toggle="tab">Resumen</a>
                            </li>
                            <li class="active"><a href="#questions-pills" data-toggle="tab">Preguntas</a>
                            </li>
                        </ul>
                        <br>
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane fade" id="summary-pills">
